{
    "projectId": "ysomiq",
    "specPattern": "**/**.cy.js",
    "excludeSpecPattern": "**/**.ignored.cy.js",
    "viewportWidth": 1024,
    "viewportHeight": 768,
    "pageLoadTimeout": 60000,
    "video": true,
    "chromeWebSecurity": false,
    "retries": {
        "runMode": 2,
        "openMode": 2
    },
    "env": {
        "ENVIRONMENT": "test"
    },
    "compilerOptions": {
        "types": [
            "cypress"
        ]
    },
    "reporter": "cypress-multi-reporters",
    "reporterOptions": {
        "reporterEnabled": "mochawesome",
        "mochawesomeReporterOptions": {
            "reportDir": "cypress/reports/mocha",
            "quiet": true,
            "overwrite": true,
            "html": true,
            "json": true
        }
    }
}
